/* pages/index/index.wxss */
@import "../../assets/css/button.wxss";
page{
    height: 100%;
    background: #eee;
}
.container{
    width: 100%;
    height: 100%;
}
.container text{
    display: block;
}
.article-list{
    width: 90%;
    height: 150rpx;
    background: #fff;
    box-shadow: 1px 1px 1px #ccc;
    border-radius: 10rpx;
    margin: 10rpx auto 20rpx auto;
    padding:20px;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
}
.article-list .title{
    font-size: 28rpx;
    color : purple
}
.article-list .tag{
    font-size: 24rpx;
    padding:10rpx 20rpx;
    height: 40rpx;
    line-height: 40rpx;
    background: burlywood;
    color : purple;
    border-radius: 4rpx;
}
.list{
    padding:20px;
    display: flex;
    flex-wrap: wrap;
}
.list .list-item{
    background: #fff;
    width: 22%;
    padding:20rpx 0;
    text-align: center;
    margin-right:20rpx;
    margin-bottom: 20rpx;
}
.list .list-item.active{
    background: purple;
    color : #fff;
}